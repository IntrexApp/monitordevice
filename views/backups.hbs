    .backup-action {
        vertical-align: top;
        margin-top: -6px;
        margin-right: 12px;
        font-weight: 200;
        font-size: 30px;
        font-family: 'Material Icons';
        display: inline-block;
    }
    .backup-colored {
        color: #4e16ed;
    }
    .backup-delete {
        color: red;
    }
</style>