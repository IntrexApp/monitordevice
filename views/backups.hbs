<!DOCTYPE html>
<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:700|Source+Sans+Pro&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <title>Monitor Device - Backups</title>
    </head>
    <body>
        <div class="nav">
            <h1>Monitor Device</h1>
            <p class="nav-icon" onclick="createBackup()">add</p>
        </div>
        <div class="create">
            <h1>Creating backup, please wait...</h1>
            <h2>This page will automatically reload once the backup is captured.</h2>
        </div>
        <div class="backups">
            {{#each files}}
                <div class="backup">
                    <h1>{{date}}</h1>
                    <a href="/download/{{timestamp}}" class="backup-colored"><p class="backup-action">cloud_download</p>Download</a>
                    <a href="/delete/{{timestamp}}" class="backup-delete"><p class="backup-action">delete_outline</p>Delete</a>
                </div>
            {{/each}}
        </div>
    </body>
</html>
<script>
    function createBackup() {
        $('.create').animate({opacity:1}, 200)
        $.get('/capture', function(req){
            window.location.reload()
        })
    }
</script>
<style>
    body, html {
        margin: 0;
        padding: 0;
        background-color: whitesmoke;
    }
    .create {
        opacity: 0;
        position: absolute;
        top: 70px;
        right: 20px;
        border: 5px #4e16ed solid;
        box-shadow: 2px 5px grey;
        padding: 10px 80px;
        border-radius: 50px;
        background-color: white;
    }
    .create > h1 {
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 20px;
        text-align: left;
        margin-top: 20px;
    }
    .create > h2 {
        font-family: 'Source Sans Pro', sans-serif;
        text-align: left;
        font-size: 15px;
        margin-bottom: 20px;
    }
    .nav {
        background-color: #4e16ed;
        padding: 5px 5px 5px 30px;
        height: 50px;
    }
    .nav h1 {
        color: white;
        font-family: 'Noto Sans JP', sans-serif;
        font-weight: 600;
        font-size: 20px;
        padding-top: 10px;
        margin:0;
        display: inline-block;
    }
    .nav p {
        display: inline-block;
        font-family: 'Material Icons';
        color: white;
        margin-left: 50px;
        margin-right: 30px;
        margin-top: 5px;
        font-size: 40px;
        float: right;
    }
    .backup {
        width: 50%;
        margin: 20px auto 20px auto;
    }
    .backup h1 {
        font-family: 'Source Sans Pro', sans-serif;
    }
    .backup a {
        vertical-align: top;
        margin-top: 12px;
        font-weight: 800;
        margin-right: 30px;
