<!DOCTYPE html>
<html>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:700|Source+Sans+Pro&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <title>{{appearance.title}} - Delete Data</title>
    </head>
    <body>
        <div class="nav">
            <h1>{{appearance.title}}</h1>
        </div>
        <div class="backups">
            <div class="bulk">
                <h1>Delete by Day</h1>
                <h2>Delete all backups within a certain day, month, & year.</h2>
                <p class="label">Day:</p>
                <input type="number" class="bd-day" placeholder="##" min="1" max="31">
                <p class="label">Month:</p>
                <input type="number" class="bd-month" placeholder="##" min="1" max="12">
                <p class="label">Year:</p>
                <input type="number" class="bd-year" placeholder="####" min="1900">
                <button onclick="bulkDay()"><p class="micon">delete_forever</p><p>Delete</p></button>
            </div>
            <div class="bulk">
                <h1>Delete by Month</h1>
                <h2>Delete all backups within a certain month & year.</h2>
                <p class="label">Month:</p>
                <input type="number" class="bm-month" placeholder="##" min="1" max="12">
                <p class="label">Year:</p>
                <input type="number" class="bm-year" placeholder="####" min="1900">
                <button onclick="bulkMonth()"><p class="micon">delete_forever</p><p>Delete</p></button>
            </div>
            <div class="bulk">
                <h1>Delete by Year</h1>
                <h2>Delete all backups within a certain year.</h2>
                <p class="label">Year:</p>
                <input type="number" class="by-year" placeholder="####" min="1900">
                <button onclick="bulkYear()"><p class="micon">delete_forever</p><p>Delete</p></button>
            </div>
        </div>
    </body>
</html>
<script>
    function bulkDay() {
        const day = $('.bd-day').val().trim()
        const month = $('.bd-month').val().trim()
        const year = $('.bd-year').val().trim()
        window.location.href = "/bulk/delete/day?month=" + month + "&day=" + day + "&year=" + year
    }
    function bulkMonth() {
        const year = $('.bm-year').val().trim()
        const month = $('.bm-month').val().trim()
        window.location.href = "/bulk/delete/month?month=" + month + "&year=" + year
    }
    function bulkYear() {
        const year = $('.by-year').val().trim()
        window.location.href = "/bulk/delete/year?year=" + year
    }
</script>
<style>
    body, html {
        margin: 0;
        padding: 0;
        background-color: whitesmoke;
    }
    .nav {
        position: sticky;
