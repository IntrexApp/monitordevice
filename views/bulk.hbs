        right: 0;
        padding: 5px 5px 5px 30px;
        height: 50px;
        background-color: {{appearance.color}};
    }
    .nav h1 {
        color: white;
        font-family: 'Noto Sans JP', sans-serif;
        font-weight: 600;
        font-size: 20px;
        padding-top: 10px;
        margin:0;
    }
    .bulk {
        width: 50%;
        margin: 20px auto 50px auto;
    }
    .bulk h1 {
        font-family: 'Source Sans Pro', sans-serif;
    }
    .bulk h2 {
        font-family: 'Source Sans Pro', sans-serif;
    }
    .bulk a {
        vertical-align: top;
        margin-top: 12px;
        font-weight: 800;
        margin-right: 30px;
        text-decoration: none;
        font-family: 'Source Sans Pro', sans-serif;
    }
    .bulk input {
        display: block;
        border: none;
        background-color: whitesmoke;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 30px;
        margin-bottom: 20px;
        width: 90px;
    }
    .bulk button {
        display: block;
        background-color: red;
        border-radius: 20px;
        color: white;
        border: none;
        padding: 0 30px 0 25px;
        font-family: 'Source Sans Pro', sans-serif;
        font-weight: 600;
        margin-top: 0;
        font-size: 20px;
    }
    .bulk button p {
        vertical-align: top;
        display: inline-block;
        margin: 10px 0;
    }
    .bulk .label {
        font-family: 'Source Sans Pro', sans-serif;
        margin-bottom: 0;
    }
    .micon {
        display: inline-block;
        font-family: 'Material Icons';
        font-size: 25px;
        margin-top: 16px;
        margin-right: 16px;
    }
    .backup-action {
        vertical-align: top;
        margin-top: -6px;
        margin-right: 12px;
        font-weight: 200;
        font-size: 30px;
        font-family: 'Material Icons';
        display: inline-block;
    }
    .backup-colored {
        color: {{appearance.color}};
    }
    .backup-delete {
        color: red;
    }
</style>